/**index.wxss**/
/*定位相关  */
.location-info {
  background:#ffad08;
  align-items: center;
  position: fixed;
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 2;
}

.location-info-container {
  width: auto;
  display: flex;
}

.location-name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: -0.68rpx;
  text-align: right;
}

.location-icon {
  padding-right: 15rpx;
  width: 28rpx;
  height: 34rpx;
}
.container{
  position: relative;
  height: auto;
  top: 60rpx;
  z-index: 1;
}
/*轮播图相关  */
.swiper-container {
  width: 100%;
  height: 386rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  overflow: hidden;
  position: relative;
  autoplay: true;
}

.swiper-item {
  width: 100%;
}

.swiper-container>swiper {
  width: 100%;
  height: 100%;
}

.swiper-container>swiper>image {
  width: 100%;
  height: 100%;
}

.image {
  mode: scaleToFill;
  width: 100%;
  height: 100%;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 8rpx;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  opacity: 0.5;
  border-radius: 10rpx;
  transition: all 0.6s;
}

.dots .dot.active {
  background: #f4f4f4;
  border-radius: 14rpx;
  width: 48rpx;
}


/*订餐选择区相关  */

.order-choose {
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: center;
}

.order-choose-item {
  display: flex;
  flex-direction: column;
  width: 33%;
  height: auto;
  align-items: center;
}

.order-choose-image {
  width: 136rpx;
  height: 136rpx;
}

.order-choose-text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
  letter-spacing: -0.58rpx;
  text-align: center;
}

.ad_container {
  height: 184rpx;
  background: #ececec;
}

/*推荐区相关  */

.recommend_container {
  background: #f2f2f2;
  width: 100%;
  /*超出部分隐藏  */
  overflow: hidden;
}

.recommend_items {
  width: auto;
  background: #fff;
  /*超出部分不折叠  */
  white-space: nowrap;
}

.swiper-item {
  width: 245rpx;
  background: #fff;
  display: inline-block;
  margin: 5rpx;
  margin-bottom: 10rpx;
}

.recommend_item {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
  border-radius: 20rpx;
  width: 245rpx;
  height: 290rpx;
  align-items: center;
}

.recommend_item_image {
  position: absolute;
  bottom: 14rpx;
  width: 190rpx;
  height: 120rpx;
}

.recommend_item_name {
  position: absolute;
  top: 28rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 0;
}

.recommend_item_price {
  position: absolute;
  top: 70rpx;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #666;
  letter-spacing: 0;
}

