/* pages/buffet/buffet.wxss */

/*顶部  */

.buffet-top {
  display: flex;
  align-items: center;
  height: 120rpx;
  background: #fff;
}

.buffet-top .current-tap {
  width: 114rpx;
  height: 60rpx;
  background: #eee;
  border-radius: 30rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  float: right;
  margin-left: 80rpx;
  color: #666;
}

/*倒计时*/
.time {
  display: flex;
  width: 530rpx;
  height: 82rpx;
  position: relative;
  justify-content: space-around;

}

.card>.box {
  background: #eff0f1;
  border: 1px solid #eee;
  box-shadow: 0 2px 4px 0 rgba(221, 221, 221, 0.50);
  width: 22rpx;
  height: 44rpx;
  position: absolute;
  bottom: -30rpx;
}

.card>.box1 {
  left: 194rpx;
}

.card>.box2 {
  right: 194rpx;
}

/*倒计时*/

.time {
  overflow: hidden;
  display: flex;
  align-items: center;
}

.time>view {
  float: left;
}

.time>image {
  position: absolute;
  left: 236rpx;
  display: inline-block;
  width: 28rpx;
  height: 48rpx;
}

.time>view.discount-time {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.time>view.order-time {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-right: 4rpx solid #ddd;
  padding-right: 20rpx;
}

.time>view view {
  font-size: 24rpx;
  color: #999;
}

.time>view .text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  text-align: left;
}

.time>view .text image {
  width: 28rpx;
  height: 28rpx;
}

.time>view view text {
  font-family: Helvetica;
  font-size: 28rpx;
  color: #fff;
  background: #999;
  padding: 6rpx;
  border-radius: 12rpx;
  margin-right: 6rpx;
}

/*预定送餐时间  */

.deliver-time {
  width: auto;
  margin-top: 5rpx;
  background: #fff;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding-left: 132rpx;
}

.deliver-time>text:last-child {
  text-align: center;
  padding: 0 20rpx 0 20rpx;
  line-height: 56rpx;
  color: #ffad08;
  border: 1px solid #ffad08;
  border-radius: 200rpx;
  width: auto;
  height: 56rpx;
  position: absolute;
  right: 24rpx;
}

.deliver-time>text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999;
  letter-spacing: -0.78rpx;
  text-align: left;
}

.buffet-main {
  margin-top: 12rpx;
}

/*主体  */

.buffet-main {
  height: 978rpx;
  padding-bottom: 100rpx;
  width:746rpx;
  margin: 0 auto;
}

.content-item {
  width: 47%;
  height: 432rpx;
  background: #fff;
  display: inline-block;
  border-radius: 15rpx;
  box-shadow: 4rpx 6rpx 6rpx 0 rgb(228, 228, 228);
  /*margin: 0 9rpx;*/
  margin-bottom: 22rpx;
  padding: 0 7rpx;
}
.content-item:nth-child(2n+1){
  margin-right: 1%;
}
.content-item:nth-child(2n){
  margin-right: 0;
}
.content-item-hover {
  height: 0;
  overflow: hidden;
}

.content-item>image {
  width: 344rpx;
  height: 216rpx;
}

.content-item>text {
  font-size: 28rpx;
  color: #333;
}

.item-price {
  margin-top: 6px;
  display: inline-block;
  width: 344rpx;
  font-size: 20rpx;
}

.item-price>view:first-child {
  width: 150rpx;
  display: inline-block;
  text-align: left;
  color: #d15454;
  line-height: 36rpx;
}

.item-now-price {
  font-size: 40rpx;
  color: #d15454;
}

.item-old-price {
  display: block;
  height: 36rpx;
  font-size: 24rpx;
  color: #bbb;
  text-decoration: line-through;
}

.create-order {
  float: right;
  width: 128rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #ffad08;
  border-radius: 100rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.noOrder{
  background: #ddd;
}
.item-bottom {
  font-size: 25rpx;
  border-top: 1px solid #ddd;
  padding: 16rpx 10rpx;
  color: #666;
}

.item-bottom>image {
  width: 36rpx;
  height: 36rpx;
  float: left;
}

.item-bottom>text {
  float: left;
  margin-left: 10rpx;
}

.item-bottom>text:last-child {
  float: right;
  margin-left: 0;
}

/*右侧按钮  */

.right-menu-btn {
  background: rgba(0, 0, 0, 0.5);
  width: 52px;
  height: 52px;
  border-radius: 100%;
  position: fixed;
  right: 0;
  top: 260rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.right-menu-btn>text {
  display: block;
  margin-top: 20rpx;
}

.right-menu-btn>view {
  background: #eee;
  width: 44rpx;
  height: 6rpx;
  margin: 0 auto;
  margin-top: 6rpx;
}

/*右侧菜单  */

.right-menu {
  background: #fff;
  box-shadow: -4rpx 0 12rpx 0 rgba(159, 159, 159, 0.50);
  width: 180rpx;
  height: 980rpx;
  position: fixed;
  right: -180rpx;
  top: 208rpx;
  transition: right 0.5s;
}

.right-menu.show {
  right: 0;
}

.right-menu .top {
  background: #fff1d4;
  height: 58rpx;
  border-radius: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  line-height: 58rpx;
  text-align: center;
}

.right-menu .top.choose {
  margin-top: 40rpx;
}

.right-menu .top>image {
  width: 28rpx;
  height: 28rpx;
}

.right-menu-main>view {
  margin-left: 50rpx;
  height:56rpx;
  margin-top:34rpx;
  margin-bottom:6rpx;
}

.right-menu-main>view>view:first-child{
  border-radius:6rpx 0 0 6rpx;
  width:80rpx;
  height:56rpx;
  line-height: 54rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  float: left;
}
.right-menu-main>view>view:last-child {
  float: left;
  width: 0;
  height: 0;
}
.right-menu-main>.selected-menu>view:first-child{
   background:#ffad08;
   color:#ffffff;
}
.selected-menu>view:last-child{
    border-width: 28rpx;
    border-left-width:36rpx;
    border-right-width:0rpx;
    border-style: solid;
    border-color:transparent transparent transparent #ffad08;
}
.right-menu-main>.selected-menu>view:first-child {
  background: #ffad08;
  color: #fff;
}
/*底部  */

.buffet-bottom{
  width:100%;
  height:100rpx;
  background: #3d3232;
  position: fixed;
  bottom:0;
  right:0;
}
.buffet-bottom-view{
  background:#bbb;
  width:264rpx;
  height:100rpx;
  font-size:32rpx;
  color:rgba(255,255,255,0.87);
  float: right;
  text-align: center;
  line-height: 100rpx;
}
.ok{
  background:#ffad08;
}
.allPrice{
  float: left;
  font-size:32rpx;
  color:rgba(255,255,255,0.87);
  line-height: 100rpx;
  margin-left: 40rpx;
}
.okPrice{
  font-size:48rpx;
  color:#ffffff;
}
.allPrice text{
  font-size:32rpx;
}
/*时间选择器  */
.time_cintainer2 {
  position: absolute;
  width: 750rpx;
  height: 600rpx;
  bottom: 0;
  background: #fff;
}

.time_cintainer {
  width: 750rpx;
  height: 500rpx;
  bottom: 0;
  background: #fff;
}

.year {
  margin-left: 24rpx;
  font-size: 40rpx;
}

.month {
  text-align: center;
  font-size: 40rpx;
}

.day {
  text-align: right;
  font-size: 40rpx;
  margin-right: 24rpx;
}
.select_date {
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  color: #333;
  letter-spacing: -0.78rpx;
  text-align: left;
}

.time_cintainer_header {
  height: 100rpx;
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.time_cintainer_header>text {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: rgba(102, 102, 102, 0.87);
  letter-spacing: 0;
}

.time_cintainer_header>text:last-child {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fc9c02;
  letter-spacing: 0;
}

.bg{
  position: absolute;
  top: 0;
  background:rgba(34,34,34,0.65);
  width:750rpx;
  height:100%;
  z-index:3;
}
