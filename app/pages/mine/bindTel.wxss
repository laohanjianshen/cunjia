.wrap{
	width: 686rpx;
	margin: 74rpx auto 0;
}
.inputText{
	background: #fff;
	height: 94rpx;
	line-height: 94rpx;
	overflow: hidden;
	margin-bottom: 40rpx;
	position: relative;
}
.inputText view,.inputText input{
	float: left;
} 
.inputText view image{
	width:36rpx;
	height:42rpx;
	margin-top: 26rpx;
}
.inputText view{
	width: 116rpx;
	text-align: center;
	font-size:36rpx;
	color:#fc9c02;
	text-align: center;
	line-height: 94rpx;
}
.inputText input{
	font-size:32rpx;
	color:#333333;
	margin-top: 26rpx;
	padding-left: 28rpx;
	border-left: 2rpx solid #e6e6e6;
	height: 44rpx;
	line-height: 44rpx;
	width: 530rpx;
}
.getCode{
	background:#fc9c02;
	border-radius:12rpx;
	width:212rpx;
	height:94rpx;
	font-size:32rpx;
	color:#FFFFFF;
	text-align: center;
	line-height: 94rpx;
	position: absolute;
	right: 0;
	top: 0;
}
.submit{
	background:#dddddd;
	border-radius:12rpx;
	height:94rpx;
	font-size:36rpx;
	color:#ffffff;
	text-align: center;
	line-height: 94rpx;
}
.submit2{
	background:#fc9c02;
}