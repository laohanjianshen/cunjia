/*订餐倒计时，优惠倒计时模态框  */
.timeout-modal{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  z-index:105;
  background:rgba(0,0,0,0.5);
  text-align: center;
}
.timeout-modal>view{
  height:950rpx;
  width:610rpx;
  margin:0 auto;
  margin-top:70rpx;
  background:#fff;
  font-size:28rpx;
  color:#666;
  padding:40rpx;
  text-align: left;
}
.timeout-modal .title{
  font-size:32rpx;
  color:#333;
  display:block;
  text-align: left;
  margin:20rpx 0;
}
.timeout-modal .title text{
  color:#f00;
}
.close-modal{
  margin-top:30rpx;
  width:60rpx;
  height:60rpx;
}