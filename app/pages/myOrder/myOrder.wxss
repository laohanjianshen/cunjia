/* pages/myOrder/myOrder.wxss */

.header {
  background: #fff;
  width: 750rpx;
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.all_order, .to_be_received, .to_be_comment, .after_sale {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 187.5rpx;
  height: 128rpx;
}

.header_lable {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333;
  text-align: left;
}

.content {
  width: 750rpx;
  margin-top: 12rpx;
}

.order_header, .single_order_footer {
  position: relative;
  background: #fff;
  width: 750rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
}

.single_order_footer {
  margin-top: 2rpx;
  margin-bottom: 2rpx;
}

.single_order_icon {
  position: absolute;
  left: 24rpx;
  width: 48rpx;
  height: 48rpx;
}

.single_order_lable {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333;
  text-align: left;
  position: absolute;
  left: 84rpx;
}

.single_order_status {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #fc9c02;
  text-align: center;
  position: absolute;
  right: 48rpx;
}

.choosen_foods {
  background: #fff;
  position: relative;
  padding-top: 14rpx;
  padding-bottom: 16rpx;
}

.single_order_content {
  background: #fff;
  position: relative;
  margin-top: 4rpx;
}

.choosen_food_item {
  height: 116rpx;
  width: 100%;
  position: relative;
  background: #fff;
  padding-top: 14rpx;
  padding-bottom: 16rpx;
}

.choosen_food_item_pic {
  width: 186rpx;
  height: 116rpx;
  position: absolute;
  left: 24rpx;
}

.choosen_food_item_name {
  position: absolute;
  left: 242rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.87);
  letter-spacing: 0;
}

.choosen_food_item_quantity {
  position: absolute;
  left: 242rpx;
  top: 82rpx;
  font-family: ArialMT;
  font-size: 32rpx;
  color: #999;
  letter-spacing: 0;
  padding-bottom: 30rpx;
}

.choosen_food_item_price {
  position: absolute;
  right: 34rpx;
  font-family: ArialMT;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0;
}

.single_order_time {
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  color: #999;
  text-align: left;
  position: absolute;
  left: 24rpx;
}

.single_order_price_lable {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  letter-spacing: -0.68rpx;
  text-align: left;
  position: absolute;
  left: 542rpx;
}

.single_order_price_text {
  width: 102rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #333;
  letter-spacing: -1.08rpx;
  text-align: left;
  position: absolute;
  right: 24rpx;
}

.single_order_operate {
  display: flex;
  align-items: center;
}

.to_be_comment_operate, .complete_operate, .to_be_pay_operate,
.to_be_received_operate {
  background: #fff;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.delete_bt, .comment_bt, .pay_bt, .to_be_received_bt {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  width: 188rpx;
  height: 68rpx;
  font-family: PingFangSC-Regular;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comment_bt_text, .delete_bt_text, .pay_bt_text, .to_be_received_text {
  font-size: 32rpx;
  color: #fff;
}

.to_be_comment_operate>.delete_bt {
  position: absolute;
  left: 314rpx;
}

.comment_bt, .pay_bt, .to_be_received_bt {
  background: #fc9c02;
  position: absolute;
  right: 24rpx;
}

.delete_bt_text {
  color: #ddd;
}

.complete_operate>.delete_bt {
  position: absolute;
  right: 24rpx;
}

.single_food_item {
  padding: 32rpx 24rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
}

.single_food_item>text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: rgba(102, 102, 102, 0.87);
  letter-spacing: 0;
}

.single_food_item>view,.choosen_food_item>view{
  background: #fc9c02;
  border-radius: 12rpx;
  width: 160rpx;
  height: 60rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;

}
.choosen_food_item>view{
  float: right;
  margin-right: 24rpx;
}

.last-child {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  line-height: 60rpx;
  text-align: right;
  color: #666;
  padding-right: 24rpx;
}

.personalOrder {
  margin-bottom: 24rpx;
}

.header_icon {
  width: 44rpx;
  height: 44rpx;
}

.choosen_food_item_guige {
  position: absolute;
  top: 55rpx;
  left: 242rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.87);
  letter-spacing: 0;
}
.choosen_food_item_condiment{
  position: absolute;
  top: 55rpx;
  left: 384rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.87);
  letter-spacing: 0;
}
.choosen_food_item_old_price{
  position: absolute;
  top: 58rpx;
  right: 34rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 0.87);
  letter-spacing: 0;
  text-decoration: line-through;
}
.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.loadmore_tips {
  display: inline-block;
  vertical-align: middle;
}