/* pages/productDetail/productDetail.wxss */
@import "../productComment/productComment.wxss";
.first-page{
	width: 704rpx;
	margin:0px auto;
	padding-top: 102rpx;
}
page,scroll-view{
	height: 100%;
}
.container{
	margin-bottom: 100rpx;
	width: 100%;
	height: 100%;
}

.card{
  width: 704rpx;
  height: 650rpx;
  position: relative;
}
.card>image{
  width: 100%;
  height: 100%;
}
/*banner*/
	.card>.swiper-container{
		width: 622rpx;
		height: 386rpx;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
		border-bottom-left-radius: 10px;
		border-bottom-right-radius: 10px;
		overflow: hidden;
		position: absolute;
		left: 50%;
		top: -76rpx;
		margin-left: -311rpx;
		border-radius: 20rpx;
		overflow: hidden;

	}
	.card>.swiper-container>swiper{
		width: 100%;
		height: 100%;
	}
	.card>.swiper-container>swiper image{
		width: 100%;
		height: 100%;
		border-radius: 20rpx;
	}
	.card .dots{  
	  position: absolute;  
	  left: 0;  
	  right: 0;  
	  bottom: 20rpx;  
	  display: flex;  
	  justify-content: center;  
	}  
	.card swiper{
		border-radius: 20rpx;
		overflow: hidden;
	}
	.card swiper-item{
		border-radius: 20rpx;
		overflow: hidden;
	}
	.card .dots .dot{  
	  margin: 0 8rpx;  
	  width: 20rpx;  
	  height: 20rpx;  
	  background: #fff; 
	  opacity: 0.5; 
	  border-radius: 10rpx;  
	  transition: all .6s;  
	}  
	.card .dots .dot.active{  
	  background:#f4f4f4;
		border-radius:14px;
		width:48rpx;
	}  
	/*商品信息*/
	.card>.info{
		position: absolute;
		width: 622rpx;
		left: 42rpx;
		top: 331rpx;
		padding-top: 30rpx;
	}

	.card>.info .name{
		font-family:MicrosoftYaHei;
		font-size:40rpx;
		color:#333333;
		margin-bottom: 18rpx;
	}
	.card>.info .price{
		font-family:PingFangSC-Medium;
		font-size:28rpx;
		color:#d15454;
		font-weight: 600;
		line-height: 66rpx;
		padding-bottom: 16rpx;
	}
	.card>.info .price .new-price{
		font-size: 48rpx;
		margin-right: 18rpx;
	}
	.card>.info .price .icon{
		font-size: 20rpx;
		color: #bbbbbb;
	}
	.card>.info .price .old-price{
		font-size:32rpx;
		color:#bbbbbb;
		text-decoration: line-through;
		font-weight: 100;
	}
	.card>.info .select-btn{
		background:#ffad08;
		border-radius:200rpx;
		padding: 0px 40rpx;
		display: inline-block;
		height:64rpx;
		font-family:PingFangSC-Regular;
		font-size:28rpx;
		color:#333333;
		text-align:center;
		line-height: 64rpx;
		position: absolute;
		right: 0px;
		bottom: 26rpx;
	}
	.card>.info .select-btn2{
		background: #ddd;
	}
	.card>.info .info_con{
		border-bottom: 2px solid #ddd;
		position: relative;
	}
	.card>.info .info_num{
		overflow: hidden;
		padding-bottom: 40rpx;
		padding-top: 30rpx;
	}
	.dianzan{
		float: left;
	}
	.PL-con .pl-item .user-con .dianzan{
		float: right;
		margin-left: 48rpx;
		margin-right: 18rpx;
	}
	.dianzan image{
		width: 48rpx;
		height: 48rpx;
		margin-right: 16rpx;
		float: left;
	}
	.PL-con .pl-item .user-con .dianzan image{
		margin-right: 0rpx;
		width: 44rpx;
		height: 44rpx;
	}
	.dianzan text{
		font-family:PingFangSC-Regular;
		font-size:36rpx;
		color:#666666;
		line-height: 48rpx;
		float: left;
	}
	.card>.info .info_num .sold{
		float: right;
		font-family:PingFangSC-Regular;
		font-size:28rpx;
		color:#999999;
	}

/*倒计时*/
	.time{
		background:#eff0f1;
		border:2rpx solid #e1e1e1;
		box-shadow:0 4rpx 8rpx 0 #e1e1e1;
		border-radius:0 0 12rpx 12rpx;
		width:700rpx;
		height:142rpx;
		position: relative;

	}
	.card>.box{
		background:#eff0f1;
		border:1px solid #eeeeee;
		box-shadow:0 2px 4px 0 rgba(221,221,221,0.50);
		width:22rpx;
		height:44rpx;
		position: absolute;
		bottom: -30rpx;
	}
	.card>.box1{
		left: 194rpx;

	}
	.card>.box2{
		right: 194rpx;
	}
	/*倒计时*/
	.time{
		overflow: hidden;
		padding-top: 20rpx;

	}
	.time>view{
		float: left;
		
	}
	.time>view.discount-time{
		border-right: 4rpx solid #ddd;
		margin-left: 114rpx;
		padding-right: 38rpx;
	}
	.time>view.order-time{
		margin-left: 54rpx;
	}
	.time>view view{
		font-size: 40rpx;
		color: #999;
	}
	.time>view .text{
		font-family:PingFangSC-Regular;
		font-size:32rpx;
		color:#333333;
		margin-bottom: 14rpx;
	}
	.time>view .text image{
		width: 28rpx;
		height: 28rpx;
		margin-left: 10rpx;
		margin-top: 8rpx;
	}
	.time>view view text{
		font-family:Helvetica;
		font-size:28rpx;
		color:#FFFFFF;
		background:#999999;
		padding: 6rpx;
		border-radius: 12rpx;
	}


/*评价-商品详情*/
	.second-page{
		position: relative;
		overflow: hidden;
	}
