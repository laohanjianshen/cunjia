	}

	.information{
		width: 700rpx;
		margin: 0px auto;
	}
	.container .PL-con .pl-item{
		margin: 0;
		padding-bottom: 0;
	}
	.PL-con{
		background: #fff;
	}
	.hot-door{
		position: absolute;
		left: 24rpx;
		bottom: 18rpx;
		background:#f8f8f8;
		border-radius:4rpx;
		overflow: hidden;
	}
	.hot-door image{
		width:20rpx;
		height:22rpx;
		float: left;
		margin:9rpx 8rpx;
	}
	.hot-door text{
		line-height: 40rpx;
		float: left;
		font-size:24rpx;
		color:#e96969;
		margin-right: 8rpx;
		
	}
	.pl-item .line{
		width: 100%;
	}
/*底部购物车*/
	.shop{
		background:rgba(59,51,51,0.96);
		box-shadow:0 0 7px 0 rgba(192,192,192,0.50);
		width:100%;
		height:100rpx;
		position: fixed;
		left: 0px;
		bottom: 0px;
    z-index: 101;
	}
	.shop>view{
		float: left;
	}
	.shop>view image{
		width: 104rpx;
		height: 104rpx;
		float: left;
		margin: -18rpx 26rpx 0rpx 16rpx;
	}
	.shop .price{
		overflow: hidden;
	}
	.shop>button{
		float: right;
	}
	.clear{
		width: 0px;
		height: 0px;
		clear:both;
	}
	.shop .price>view{
		font-size:32rpx;
